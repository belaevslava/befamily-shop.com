<!-- Article item -->
<figure class="article-item">
    <div class="article-item__image-container">
        <a href="article.html?articleId=@@articleId" class="article-item__image" style="background-image: url(/@@previewImageUrl);"></a>
    </div>
    <figcaption class="article-item__caption">
        <a href="article.html?articleId=@@articleId" class="article-item__title">@@title</a>
        <div class="article-item__text">
            <p>@@text</p>
        </div>
        <div class="article-item__time-container">
            <time class="article-item__time">@@time</time>
        </div>
        <div class="article-item__actions">
            <a href="article.html?articleId=@@articleId" class="btn btn-outline-primary btn-sm">Читать подробно</a>
        </div>
    </figcaption>
</figure>
<!-- /Article item -->