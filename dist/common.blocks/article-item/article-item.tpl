<!-- Article item -->
<figure class="article-item row">
    <div class="col-lg-5 col-xl-4">
        <a href="@@articleUrl" class="article-item__image" style="background-image: url(@@previewImageUrl);"></a>
    </div>
    <figcaption class="figure-caption col-lg-7 col-xl-8">
        <a href="#" class="article-item__title">@@title</a>
        <div class="article-item__text">
            <p>@@text</p>
        </div>
        <footer class="article-item__footer">
            <time class="article-item__time">@@time</time>
            <a href="@@articleUrl" class="btn btn-outline-primary btn-sm">Читать подробно</a>
        </footer>
    </figcaption>
</figure>
<!-- /Article item -->